<ul class="movie-cards">
    {{#each this}}
    <li>
        {{#if backdrop_path}}
        <img class="grid-img" src="https://image.tmdb.org/t/p/w500{{backdrop_path}}" alt="{{title}}"
            data-poster="{{poster_path}}" />
        {{else}}
        <img class="grid-img" src="http://placehold.it/500x280">
        {{/if}}

        <h2>{{title}}</h2>
        <p>{{release_date}}</p>

    </li>
    {{/each}}
</ul>